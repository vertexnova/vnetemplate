{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VNE_TEMPLATE_DEV": "ON"
      }
    },
    {
      "name": "dev",
      "displayName": "Dev (Debug, tests + examples)",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VNE_TEMPLATE_DEV": "ON"
      }
    },
    {
      "name": "ci",
      "displayName": "CI (Release, tests, warnings-as-errors)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ci",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VNE_TEMPLATE_CI": "ON",
        "WARNINGS_AS_ERRORS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "dev",
      "configurePreset": "dev"
    },
    {
      "name": "ci",
      "configurePreset": "ci"
    }
  ]
}
