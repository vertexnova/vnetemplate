# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C++ files
[*.{cpp,hpp,c,h}]
indent_size = 4
max_line_length = 120

# CMake files
[CMakeLists.txt]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JavaScript files
[*.js]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# Shell scripts
[*.sh]
end_of_line = lf

# Windows scripts
[*.{cmd,bat}]
end_of_line = crlf

# PowerShell scripts
[*.ps1]
end_of_line = crlf

# XML files
[*.xml]
indent_size = 2

# HTML files
[*.html]
indent_size = 2
